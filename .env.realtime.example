# HighPer Real-Time Web Configuration
# Enable this section only if you need real-time features (WebSocket, SSE, WebTransport)

# =============================================================================
# REAL-TIME FEATURES CONFIGURATION
# =============================================================================

# Global Real-Time Settings
REALTIME_ENABLED=false
REALTIME_AUTO_START=true
REALTIME_HOST=0.0.0.0
REALTIME_PORT=8080
REALTIME_MAX_CONNECTIONS=10000

# =============================================================================
# PROTOCOL CONFIGURATION
# =============================================================================

# WebSocket Configuration
WEBSOCKET_ENABLED=false
WEBSOCKET_PATH=/ws
WEBSOCKET_MAX_FRAME_SIZE=2097152
WEBSOCKET_MAX_MESSAGE_SIZE=10485760
WEBSOCKET_COMPRESSION=true
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Server-Sent Events (SSE) Configuration
SSE_ENABLED=false
SSE_PATH=/sse
SSE_RETRY_INTERVAL=3000
SSE_KEEP_ALIVE_INTERVAL=25
SSE_MAX_EVENT_SIZE=65536

# WebTransport Configuration (HTTP/3 + QUIC)
WEBTRANSPORT_ENABLED=false
WEBTRANSPORT_PATH=/wt
WEBTRANSPORT_MAX_STREAMS=1000
WEBTRANSPORT_MAX_DATAGRAM_SIZE=1200
WEBTRANSPORT_RELIABILITY=reliable_ordered
WEBTRANSPORT_CONGESTION_CONTROL=bbr2
WEBTRANSPORT_ENABLE_0RTT=true

# HTTP/3 Configuration (Full HTTP/3 over QUIC support)
HTTP3_ENABLED=false
HTTP3_PORT=443
HTTP3_ENABLE_0RTT=true
HTTP3_ENABLE_EARLY_DATA=true
HTTP3_QUIC_VERSION=draft-34
HTTP3_MAX_CONNECTIONS=10000
HTTP3_CONNECTION_TIMEOUT=300
HTTP3_ALT_SVC_MAX_AGE=3600
HTTP3_PROTOCOL_NEGOTIATION=true
HTTP3_PREFER_HTTP3=true
HTTP3_ADAPTIVE_SELECTION=true

# =============================================================================
# BROADCASTING CONFIGURATION
# =============================================================================

# Broadcasting Driver (memory, redis, nats)
REALTIME_BROADCAST_DRIVER=memory

# Redis Broadcasting Configuration
REALTIME_REDIS_HOST=localhost
REALTIME_REDIS_PORT=6379
REALTIME_REDIS_DATABASE=0
REALTIME_REDIS_PASSWORD=
REALTIME_REDIS_PREFIX=highper:realtime:

# NATS Broadcasting Configuration
REALTIME_NATS_SERVERS=nats://localhost:4222
REALTIME_NATS_SUBJECT_PREFIX=highper.realtime

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Authentication
REALTIME_AUTH_ENABLED=false
REALTIME_AUTH_DRIVER=jwt
REALTIME_JWT_SECRET=your-jwt-secret-key-here
REALTIME_JWT_ALGORITHM=HS256

# Rate Limiting
REALTIME_RATE_LIMIT_ENABLED=false
REALTIME_RATE_LIMIT_CONNECTIONS=10
REALTIME_RATE_LIMIT_MESSAGES_PER_MINUTE=60
REALTIME_RATE_LIMIT_BURST=10

# CORS Configuration
REALTIME_CORS_ENABLED=true
REALTIME_CORS_ORIGINS=*
REALTIME_CORS_METHODS=GET,POST
REALTIME_CORS_HEADERS=*

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Monitoring
REALTIME_MONITORING_ENABLED=true
REALTIME_HEALTH_CHECK_ENABLED=true
REALTIME_HEALTH_CHECK_PATH=/realtime/health
REALTIME_METRICS_ENABLED=true

# Logging
REALTIME_LOG_LEVEL=info
REALTIME_LOG_CONNECTIONS=true
REALTIME_LOG_MESSAGES=false
REALTIME_LOG_BANDWIDTH=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Connection Management
REALTIME_CONNECTION_TIMEOUT=300
REALTIME_HEARTBEAT_INTERVAL=30
REALTIME_BUFFER_SIZE=8192
REALTIME_BACKLOG_SIZE=1000

# Memory Management
REALTIME_MAX_MEMORY_USAGE=512M
REALTIME_GC_INTERVAL=60
REALTIME_CLEANUP_INTERVAL=300

# Threading (if using threaded deployment)
REALTIME_WORKER_PROCESSES=auto
REALTIME_WORKER_CONNECTIONS=1000

# =============================================================================
# DEPLOYMENT SPECIFIC SETTINGS
# =============================================================================

# Container/Docker Settings
REALTIME_CONTAINER_MODE=false
REALTIME_HEALTH_CHECK_STARTUP_DELAY=5
REALTIME_GRACEFUL_SHUTDOWN_TIMEOUT=30

# Kubernetes Settings
REALTIME_K8S_POD_IP=
REALTIME_K8S_SERVICE_NAME=
REALTIME_K8S_NAMESPACE=

# Load Balancer Settings
REALTIME_BEHIND_PROXY=false
REALTIME_PROXY_PROTOCOL=false
REALTIME_TRUSTED_PROXIES=127.0.0.1,::1

# SSL/TLS (if terminating SSL at application level)
REALTIME_SSL_ENABLED=false
REALTIME_SSL_CERT_PATH=
REALTIME_SSL_KEY_PATH=
REALTIME_SSL_CA_PATH=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
REALTIME_DEBUG_MODE=false
REALTIME_PROFILE_ENABLED=false
REALTIME_MOCK_PROTOCOLS=false

# Testing
REALTIME_TEST_MODE=false
REALTIME_TEST_PORT=8081
REALTIME_TEST_AUTO_DISCONNECT=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Experimental Features
REALTIME_HTTP3_ENABLED=false
REALTIME_QUIC_ENABLED=false
REALTIME_WEBRTC_ENABLED=false
REALTIME_DATACHANNEL_ENABLED=false

# Compatibility Modes
REALTIME_LEGACY_WEBSOCKET_SUPPORT=true
REALTIME_FALLBACK_TO_POLLING=true
REALTIME_STRICT_PROTOCOL_VALIDATION=true

