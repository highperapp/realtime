{
    "name": "easeappphp/highper-realtime",
    "description": "High-performance real-time web library for HighPer framework with WebSocket, SSE, and WebTransport support",
    "type": "library",
    "license": "MIT",
    "keywords": ["highper", "websocket", "sse", "realtime", "webtransport", "http3", "quic"],
    "authors": [
        {
            "name": "EaseApp PHP Team",
            "email": "raghu@easeapp.org"
        }
    ],
    "require": {
        "php": "^8.2",
        "easeappphp/highper-core": "^1.0",
        "amphp/websocket-server": "^4.0",
        "amphp/http-server": "^3.0",
        "amphp/http-client": "^5.0",
        "amphp/serialization": "^1.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "EaseAppPHP\\HighPer\\Realtime\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EaseAppPHP\\HighPer\\Realtime\\Tests\\": "tests/"
        }
    },
    "extra": {
        "highper": {
            "providers": [
                "EaseAppPHP\\HighPer\\Realtime\\RealtimeServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "format": "php-cs-fixer fix"
    }
}